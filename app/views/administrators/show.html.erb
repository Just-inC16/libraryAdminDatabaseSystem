<p>
<strong>Title:</strong>
<%=	@administrator.title %>
</p>
<p>
<strong>Author:</strong>
<%=	@administrator.author %>
</p>
<p>
<strong>ISBN:</strong>
<%=	@administrator.isbn %>
</p>
<p>
<strong>Copies:</strong>
<%=	@administrator.copies %>
</p>
<h2>Reviews</h2>
<%	@administrator.patrons.each do	|patron|	%>
<p>
<strong>Name:</strong>
<%=	patron.name %>
</p>
<p>
<strong>Review:</strong>
<%=	patron.review %>
</p>
<%=	link_to 'Destroy Review',	 [patron.administrator,	patron],
method:	:delete,
data:	{	confirm:	'Are	you	 sure?'	}	%>
<%	end	%>
<h2>Add	 Review:</h2>
<%=	form_with(model:	 [	@administrator,	@administrator.patrons.build ],	local:	true)	do	|form|	%>
<p>
<%=	form.label :name	%><br>
<%=	form.text_field :name	%>
</p>
<p>
<%=	form.label :review	 %><br>
<%=	form.text_area :review	%>
</p>
<p>
<%=	form.submit %>
</p>
<%	end	%>
<%=	link_to 'Back',	administrators_path %>